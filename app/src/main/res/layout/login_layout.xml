<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_3sdp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/_5sdp"
    card_view:cardElevation="@dimen/_1sdp"
    card_view:cardUseCompatPadding="true">




    <LinearLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/custom_drawable_light_gray_border_with_white_fill"
        android:elevation="@dimen/_4sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ENTER YOUR DETAILS"
             style="@style/custom_font_roboto_bold"
            android:textSize="@dimen/_14sdp" />


        <EditText
            android:id="@+id/login_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/custom_font_roboto_regular"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="employee Id"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:drawableRight="@drawable/ic_person_outline_black_24dp"
            android:singleLine="true"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
            android:inputType="text"/>

        <EditText
            android:id="@+id/password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/custom_font_roboto_regular"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:drawableRight="@drawable/ic_lock_outline_black_24dp"
            android:hint="Password"
            android:inputType="textPassword|textCapWords"
            android:singleLine="true" />

        <TextView
            android:id="@+id/forgetpass"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="right"
            android:textSize="@dimen/_10sdp"
            style="@style/custom_font_roboto_regular"
            android:textColor="@color/blue_color"
            android:text="forgot password"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnProceedPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/button_color"
            android:gravity="center_horizontal|center"
            android:text="Login"
            style="@style/custom_font_roboto_regular"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_14sdp" />

    </LinearLayout>




</android.support.v7.widget.CardView>
